{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "build"
  },
  "include": [
    "src/**/*.ts",
    "config"
  ],
  "exclude": [
    "node_modules"
  ]
}
