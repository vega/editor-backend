{
  "name": "vega-editor-backend",
  "version": "0.1.0",
  "description": "Backend for Vega Editor",
  "scripts": {
    "start": "now dev",
    "deploy": "now",
    "build": "tsc",
    "lint": "eslint {src/**/*.ts,config/*.ts}",
    "format": "eslint --fix {src/**/*.ts,config/*.ts}",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docs": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vega/editor-backend.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/vega/editor-backend/issues"
  },
  "homepage": "https://github.com/vega/editor-backend#readme",
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^5.16.0",
    "husky": ">=3",
    "lint-staged": ">=9",
    "now": "^16.3.1",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "@octokit/graphql": "4.2.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "isomorphic-fetch": "^2.2.1",
    "passport": "^0.4.0",
    "passport-github2": "^0.1.11",
    "pug": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn docs && git add docs/ && lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint"
    ]
  }
}
